                        .col-12.col-md-6.col-lg-3
                            .card.border-0.shadow-sm.h-100
                                .card-body.p-3.p-md-4.text-center
                                    .badge.bg-primary.rounded-pill.mb-3.px-3.py-2 3
                                    i.fas.fa-cogs.fa-2x.fa-md-3x.text-primary.mb-2.mb-md-3
